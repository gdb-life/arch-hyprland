{
    "hyprland": {
        "packages": [
            "hyprland", 
            "brightnessctl"
        ],
        "configs_paths": {
            "main": [
                "hyprland/hyprland.conf"
            ],
            "modules": [
                "hyprland/modules/appearance.conf",
                "hyprland/modules/autostart.conf",
                "hyprland/modules/environment.conf",
                "hyprland/modules/input.conf",
                "hyprland/modules/keybindings.conf",
                "hyprland/modules/monitors.conf",
                "hyprland/modules/windows.conf"
            ]
        },
        "install_paths": {
            "main": [
                "~/.config/hypr/hyprland.conf"
            ],
            "modules": [
                "~/.config/hypr/modules/appearance.conf",
                "~/.config/hypr/modules/autostart.conf",
                "~/.config/hypr/modules/environment.conf",
                "~/.config/hypr/modules/input.conf",
                "~/.config/hypr/modules/keybindings.conf",
                "~/.config/hypr/modules/monitors.conf",
                "~/.config/hypr/modules/windows.conf"
            ]
        }
    },
    "hyprpaper": {
        "packages": [
            "hyprpaper"
        ],
        "configs_paths": {
            "main": [
                "hyprpaper/hyprpaper.conf"
            ]
        },
        "install_paths": {
            "main": [
                "~/.config/hypr/hyprpaper.conf"
            ]
        }
    },
    "hypridle": {
        "packages": [
            "hypridle"
        ],
        "configs_paths": {
            "main": [
                "hypridle/hypridle.conf"
            ]
        },
        "install_paths": {
            "main": "~/.config/hypr/hypridle.conf"
        }
    },
    "hyprlock": {
        "packages": [
            "hyprlock"
        ],
        "configs_paths": {
            "main": [
                "hyprlock/hyprlock.conf"
            ]
        },
        "install_paths": {
            "main": [
                "~/.config/hypr/hyprlock.conf"
            ]
        }
    },
    "xdph": {
        "packages": [
            "xdg-desktop-portal-hyprland", 
            "xdg-desktop-portal-gtk",
            "wireplumber",
            "pipewire"
        ],
        "configs_paths": {
            "main": [
                "xdph/xdph.conf"
            ]
        },
        "install_paths": {
            "main": [
                "~/.config/hypr/xdph.conf"
            ]
        }
    },
    "wofi": {
        "packages": [
            "wofi"
        ]
    },
    "waybar": {
        "packages": [
                    "waybar", 
                    "otf-font-awesome"
        ],
        "configs_paths": {
            "main": [
                "waybar/config.jsonc"
            ],
            "modules": [
                "waybar/style.css"
            ]
        },
        "install_paths": {
            "main": [
                "~/.config/waybar/config.jsonc"
            ],
            "modules": [
                "~/.config/waybar/style.css"
            ]
        }
    },
    "programs": {
        "packages": [
            "kitty", 
            "thunar",
            "lite-xl",
            "cpupower",
            
            "bluez",
            "bluez-utils",
            "blueman",

            "zathura",
            "zathura-djvu",
            "zathura-pdf-poppler",

            "feh",
            "grim",
            "slurp",
            "wl-clipboard",
            "wl-copy",
            "wl-paste",

            "wine",
            "wine-mono",
            "wine-gecko",
            "winetricks",
            "lib32-mesa",
            "lib32-gnutls",
            "lib32-libldap",
            "lib32-libxml2",
            "lib32-vulkan-icd-loader"
        ],
        "configs_paths": {
            "modules": [
                "programs/kitty/kitty.conf"
            ]
        },
        "install_paths": {
            "main": [
                "~/.config/kitty/kitty.conf"
            ]
        }
    },
    "utils": {
        "packages": [
            "xdg-user-dirs",
            "udisks2",
            "udiskie",
            "gvfs",
            "network-manager-applet",
            "networkmanager-strongswan"
        ]
    },
    "drivers": {
        "packages": [
            "pipewire",
            "lib32-pipewire",
            "pipewire-pulse",
            "wireplumber"
        ]
    }
}
  